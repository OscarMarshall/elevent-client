(ns util)

(defelem input-cell [{:keys [state] :as attr} _]
  (input (assoc (dissoc attr :state) :value @state :on-keyup #(reset! state @%) :on-change #(reset! state @%))))

(defelem textarea-cell [{:keys [state] :as attr} _]
  (textarea (assoc (dissoc attr :state) :value @state :on-keyup #(reset! state @%))))